# make a password generator - used LIST in python 
import random

kata = ['a', 'b', 'c', 'd', ...]  # List of characters
angka = ['0', '1', '2', ...]  # List of numbers
simbol = ['!', '@', '#', ...]  # List of symbols

print("------------------------------- Welcome to Password Generator -------------------------------")

jumlah_kata = int(input("Enter the number of characters you want: "))
jumlah_angka = int(input("Enter the number of numbers you want: "))
jumlah_simbol = int(input("Enter the number of symbols you want: "))

total_password = jumlah_angka + jumlah_kata + jumlah_simbol
password = []

for i in range(jumlah_kata):
    password += random.choice(kata)
    
for i in range(jumlah_angka):
    password += random.choice(angka)
    
for i in range(jumlah_simbol):
    password += random.choice(simbol)

random.shuffle(password)

print("\nGenerated password:", password)
total_length = jumlah_kata + jumlah_angka + jumlah_simbol
print("Total length:", total_length)

final_password = "".join(password)
print("Your final password:", final_password)
print("\n\nYour password consists of:", total_password, "characters.")
print("Thank you for using our Password Generator!")
